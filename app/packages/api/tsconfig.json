{
  "compilerOptions": {
    "esModuleInterop": true,
    "module": "CommonJS",
    "noUnusedLocals": true,
    "noUnusedParameters": false,
    "outDir": "./build",
    "pretty": true,
    "removeComments": true,
    "rootDir": "./src",
    "sourceMap": true,
    "strict": true,
    "target": "ES2019",
    "lib": ["ES2019"],
    "skipLibCheck": true,
    "typeRoots": ["./types", "./node_modules/@types"]
  },
}